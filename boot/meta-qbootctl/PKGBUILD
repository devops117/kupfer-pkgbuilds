_mode=cross
pkgname=meta-qbootctl
pkgdesc="Metapackage for Qualcomm A/B boot support"
pkgver=0.1
pkgrel=2
_arches=specific
arch=(
    aarch64
)
license=(GPL)
depends=(qbootctl)
source=(qbootctl.txt)
