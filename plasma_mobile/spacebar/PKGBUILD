# Maintainer: Danct12 <danct12@disroot.org>
# Contributor: Bernhard Landauer <bernhard@manjaro.org>
# Contributor: dodgejcr@gmail.com
# Contributor: Bhushan Shah <bhush94 at gmail dot com>
# Contributor: Devin Lin <devin@kde.org>
_mode=host
pkgname=spacebar
pkgdesc="SMS and messaging application for Mobile Devices running Plasma"
pkgver=23.01.0.r0.gab18e7e
pkgrel=2
_arches=all
arch=(
    x86_64
    armv7h
    aarch64
)
license=(GPL-3.0-or-later)
depends=(
    kcontacts5
    knotifications5
    kirigami2
    kirigami-addons5
    kpeople5
    ki18n5
    qt5-quickcontrols2
    modemmanager-qt5
    telepathy-qt
    libphonenumber
    kdbusaddons5
    kio5
    c-ares
)
makedepends=(
    cmake
    extra-cmake-modules
    qcoro-qt5
)
_commit=ab18e7e36eefe3c9c3be37e5be2b4d1e08b2cbb6
source=(
    "git+https://invent.kde.org/plasma-mobile/spacebar.git#commit=$_commit"
)
sha256sums=(
    SKIP
)

pkgver() {
    cd "$pkgname"
    git describe --long --abbrev=7 --tags "$_commit" | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    mkdir -p build
}

build() {
    cd build
    cmake ../spacebar \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DBUILD_TESTING=OFF \
        -DKDE_INSTALL_LIBDIR=lib \
        -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
        -DCMAKE_BUILD_TYPE=Release
    make
}

package() {
    cd build
    make DESTDIR="$pkgdir/" install
}
