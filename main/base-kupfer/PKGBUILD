_mode=cross
pkgname=base-kupfer
pkgver=0.2
pkgrel=4
_arches=specific
arch=(aarch64)
license=(MIT)
depends=(
    alsa-ucm-conf
    alsa-utils
    bluez
    bluez-libs
    bluez-utils
    haveged
    iw
    net-tools
    networkmanager
    openssh
    sudo
    usb-tethering
    wireless-regdb
    wpa_supplicant
    xdg-user-dirs
    mkinitcpio-kupfer
    parted
    kupfer-config
)
install=base-kupfer.install
source=(
    mkinitcpio.conf
    50-mkinitcpio-overwrite.hook
    mkinitcpio-overwrite.sh
    ignore-power-key.conf
    locale.conf
    rootfsresize-hooks.sh
    rootfsresize-install.sh
    rootfsdetect-hooks.sh
    rootfsdetect-install.sh
    firmwaresearchpath-hooks.sh
    firmwaresearchpath-install.sh
    random-mac.conf
    fstab
)
